Sub ExporterFeuille1CommeImageVersPowerPoint()
    Dim PowerPointApp As Object
    Dim Presentation As Object
    Dim Slide As Object
    Dim ExcelApp As Application
    Dim Classeur As Workbook
    Dim Feuille As Worksheet
    Dim Plage As Range
    Dim Fichier As String
    Dim Dossier As String

    ' üìÅ Modifier ici
    Dossier = "C:\Votre\Dossier\" ' ‚Üê Modifie ce chemin
    If Right(Dossier, 1) <> "\" Then Dossier = Dossier & "\"

    ' Lancer PowerPoint
    On Error Resume Next
    Set PowerPointApp = GetObject(, "PowerPoint.Application")
    If PowerPointApp Is Nothing Then
        Set PowerPointApp = CreateObject("PowerPoint.Application")
    End If
    On Error GoTo 0
    PowerPointApp.Visible = True
    Set Presentation = PowerPointApp.Presentations.Add

    ' Parcourir les fichiers Excel
    Fichier = Dir(Dossier & "*.xls*")
    Do While Fichier <> ""
        Set Classeur = Workbooks.Open(Dossier & Fichier, ReadOnly:=True)
        Set Feuille = Classeur.Sheets(1)

        ' D√©finir la plage d'impression si elle est d√©finie
        If Feuille.PageSetup.PrintArea <> "" Then
            Set Plage = Feuille.Range(Feuille.PageSetup.PrintArea)
        Else
            Set Plage = Feuille.UsedRange
        End If

        ' Copier la plage comme image
        Plage.CopyPicture Appearance:=xlScreen, Format:=xlPicture

        ' Cr√©er une diapositive
        Set Slide = Presentation.Slides.Add(Presentation.Slides.Count + 1, 12) ' 12 = slide vide
        PowerPointApp.ActiveWindow.View.GotoSlide Slide.SlideIndex

        ' Coller dans la diapositive
        On Error Resume Next
        Slide.Shapes.Paste.Select
        On Error GoTo 0

        ' Centrer l'image si elle est coll√©e
        If PowerPointApp.ActiveWindow.Selection.Type = 2 Then
            With PowerPointApp.ActiveWindow.Selection.ShapeRange
                .LockAspectRatio = msoTrue
                .Left = (Presentation.PageSetup.SlideWidth - .Width) / 2
                .Top = (Presentation.PageSetup.SlideHeight - .Height) / 2
            End With
        End If

        Classeur.Close SaveChanges:=False
        Fichier = Dir
    Loop

    MsgBox "Slides g√©n√©r√©es avec succ√®s !"
End Sub
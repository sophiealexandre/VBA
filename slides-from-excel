Sub ExporterPremierePageToutesFeuillesVersPPT()
    Dim dossier As String
    Dim fichier As String
    Dim classeur As Workbook
    Dim feuille As Worksheet
    Dim plagePage1 As Range
    Dim pptApp As Object
    Dim pptPres As Object
    Dim pptSlide As Object

    ' üìÅ √Ä adapter : dossier contenant vos fichiers Excel
    dossier = "C:\Votre\Dossier\" ' ‚Üê MODIFIER ICI
    If Right(dossier, 1) <> "\" Then dossier = dossier & "\"

    ' üñºÔ∏è Ouvrir PowerPoint
    Set pptApp = CreateObject("PowerPoint.Application")
    pptApp.Visible = True
    Set pptPres = pptApp.Presentations.Add

    ' üìÇ Parcourir les fichiers Excel
    fichier = Dir(dossier & "*.xls*")
    Do While fichier <> ""
        Set classeur = Workbooks.Open(dossier & fichier)

        ' üîÅ Pour chaque feuille du classeur
        For Each feuille In classeur.Sheets
            feuille.Activate

            ' üìå Obtenir la zone de la premi√®re page d'impression
            On Error Resume Next
            If feuille.PageSetup.PrintArea <> "" Then
                Set plagePage1 = feuille.Range(feuille.PageSetup.PrintArea)
            Else
                Set plagePage1 = feuille.UsedRange
            End If
            On Error GoTo 0

            ' Copier comme image
            plagePage1.CopyPicture Appearance:=xlScreen, Format:=xlPicture

            ' Ajouter une nouvelle diapositive vide
            Set pptSlide = pptPres.Slides.Add(pptPres.Slides.Count + 1, 12) ' 12 = slide vide
            pptSlide.Shapes.Paste.Select

            ' Centrer l'image sur la diapositive
            With pptApp.ActiveWindow.Selection.ShapeRange
                .LockAspectRatio = msoTrue
                .Left = (pptPres.PageSetup.SlideWidth - .Width) / 2
                .Top = (pptPres.PageSetup.SlideHeight - .Height) / 2
            End With
        Next feuille

        classeur.Close False
        fichier = Dir
    Loop

    MsgBox "Slides cr√©√©es avec les premi√®res pages d‚Äôimpression de chaque feuille !"
End Sub
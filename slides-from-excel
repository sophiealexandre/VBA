Sub ExporterPremierePageDeChaqueFeuille()
    Dim dossier As String
    Dim fichier As String
    Dim classeur As Workbook
    Dim feuille As Worksheet
    Dim plageTemp As Range
    Dim pptApp As Object
    Dim pptPres As Object
    Dim pptSlide As Object

    ' 📁 Dossier des fichiers Excel — MODIFIER ICI
    dossier = "C:\Votre\Dossier\" ' ← Exemple : C:\Users\Utilisateur\Documents\
    If Right(dossier, 1) <> "\" Then dossier = dossier & "\"

    ' 🖼️ Créer une instance PowerPoint
    Set pptApp = CreateObject("PowerPoint.Application")
    pptApp.Visible = True
    Set pptPres = pptApp.Presentations.Add

    ' 📂 Parcourir les fichiers Excel
    fichier = Dir(dossier & "*.xls*")
    Do While fichier <> ""
        Set classeur = Workbooks.Open(dossier & fichier)

        For Each feuille In classeur.Sheets
            feuille.Activate

            ' 🔍 Essayer d'utiliser la zone d’impression
            If feuille.PageSetup.PrintArea <> "" Then
                On Error Resume Next
                Set plageTemp = feuille.Range(feuille.PageSetup.PrintArea)
                On Error GoTo 0
            End If

            ' 🩹 Si pas de zone d’impression, on prend la plage visible de la première page
            If plageTemp Is Nothing Then
                Set plageTemp = feuille.Range("A1:G40") ' <- Ajustable selon vos cas
            End If

            ' Copier en image
            plageTemp.CopyPicture Appearance:=xlScreen, Format:=xlPicture

            ' Ajouter une slide PowerPoint
            Set pptSlide = pptPres.Slides.Add(pptPres.Slides.Count + 1, 12)
            pptSlide.Shapes.Paste.Select

            ' Centrer l'image
            With pptApp.ActiveWindow.Selection.ShapeRange
                .LockAspectRatio = msoTrue
                .Left = (pptPres.PageSetup.SlideWidth - .Width) / 2
                .Top = (pptPres.PageSetup.SlideHeight - .Height) / 2
            End With

            Set plageTemp = Nothing
        Next feuille

        classeur.Close False
        fichier = Dir
    Loop

    MsgBox "Export terminé !"
End Sub
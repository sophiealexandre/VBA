Sub CopierPremierePageImpressionFeuille1()
    Dim dossier As String
    Dim fichier As String
    Dim classeur As Workbook
    Dim feuille As Worksheet
    Dim plage As Range
    Dim pptApp As Object
    Dim pptPres As Object
    Dim pptSlide As Object
    Dim hauteurMax As Double
    Dim hauteurAcc As Double
    Dim i As Long

    ' üìÅ Dossier √† adapter
    dossier = "C:\Votre\Dossier\" ' ‚Üê Modifier ici
    If Right(dossier, 1) <> "\" Then dossier = dossier & "\"

    ' üìÇ Ouvrir PowerPoint
    Set pptApp = CreateObject("PowerPoint.Application")
    pptApp.Visible = True
    Set pptPres = pptApp.Presentations.Add

    fichier = Dir(dossier & "*.xls*")
    Do While fichier <> ""
        Set classeur = Workbooks.Open(dossier & fichier, ReadOnly:=True)
        Set feuille = classeur.Sheets(1)
        feuille.Activate

        ' Estimation de la hauteur max d‚Äôune page imprimable (ajustable si besoin)
        hauteurMax = feuille.PageSetup.PaperSize
        If hauteurMax = xlPaperLetter Then
            hauteurMax = 85 ' environ 85 points pour une page lettre
        Else
            hauteurMax = 85 ' valeur par d√©faut
        End If

        ' S√©lection approximative des lignes tenant sur la premi√®re page
        hauteurAcc = 0
        For i = 1 To feuille.UsedRange.Rows.Count
            hauteurAcc = hauteurAcc + feuille.Rows(i).RowHeight
            If hauteurAcc > 800 Then Exit For ' ajustable pour affiner
        Next i

        ' Copier la plage de lignes qui "tient" en page 1
        Set plage = feuille.Range("A1:Z" & i)
        plage.CopyPicture Appearance:=xlScreen, Format:=xlPicture

        ' Cr√©er une slide et coller l'image
        Set pptSlide = pptPres.Slides.Add(pptPres.Slides.Count + 1, 12)
        pptSlide.Shapes.Paste.Select

        ' Centrer l‚Äôimage
        With pptApp.ActiveWindow.Selection.ShapeRange
            .LockAspectRatio = msoTrue
            .Left = (pptPres.PageSetup.SlideWidth - .Width) / 2
            .Top = (pptPres.PageSetup.SlideHeight - .Height) / 2
        End With

        classeur.Close False
        fichier = Dir
    Loop

    MsgBox "Slides cr√©√©es avec la page 1 estim√©e de la feuille 1 de chaque fichier."
End Sub
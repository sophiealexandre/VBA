Sub ExportPage1Feuille1VersPowerPoint()
    Dim dossier As String
    Dim fichier As String
    Dim classeur As Workbook
    Dim feuille As Worksheet
    Dim tempPDF As String
    Dim pptApp As Object
    Dim pptPres As Object
    Dim pptSlide As Object

    ' üìÅ Dossier contenant les fichiers Excel
    dossier = "C:\Votre\Dossier\" ' ‚Üê Modifie ce chemin
    If Right(dossier, 1) <> "\" Then dossier = dossier & "\"

    ' üñºÔ∏è Cr√©er PowerPoint
    Set pptApp = CreateObject("PowerPoint.Application")
    pptApp.Visible = True
    Set pptPres = pptApp.Presentations.Add

    ' üìÇ Parcourir les fichiers Excel
    fichier = Dir(dossier & "*.xls*")
    Do While fichier <> ""
        Set classeur = Workbooks.Open(dossier & fichier, ReadOnly:=True)
        Set feuille = classeur.Sheets(1) ' ‚Üê Seulement la premi√®re feuille

        ' üìÑ Exporter uniquement la premi√®re page d'impression en PDF
        tempPDF = Environ$("TEMP") & "\page1.pdf"
        feuille.ExportAsFixedFormat Type:=xlTypePDF, Filename:=tempPDF, From:=1, To:=1, OpenAfterPublish:=False

        ' ‚ûï Cr√©er une slide et ins√©rer le PDF comme image
        Set pptSlide = pptPres.Slides.Add(pptPres.Slides.Count + 1, 12)
        pptSlide.Shapes.AddPicture FileName:=tempPDF, _
            LinkToFile:=msoFalse, SaveWithDocument:=msoTrue, _
            Left:=20, Top:=20, Width:=-1, Height:=-1

        classeur.Close False
        fichier = Dir
    Loop

    MsgBox "Slides g√©n√©r√©es avec la page 1 de chaque fichier Excel (feuille 1 uniquement)."
End Sub